@model Gestion_Usuarios.Models.ViewModels.CombinedAuthViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Acceso - Checklist Systems</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300..700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #e9ecef;
            font-family: 'Inter', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .card-auth {
            width: 100%;
            max-width: 480px;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
            background: white;
        }
    </style>
</head>
<body>
    <div class="card-auth">
        <div class="text-center mb-3">
            <h3 class="fw-bold text-primary">Bienvenido</h3>
            <p class="text-muted">Ingresa tus credenciales</p>
        </div>

        @if (!ViewData.ModelState.IsValid && (ViewBag.ActiveForm == null || ViewBag.ActiveForm == "login"))
        {
            <div class="alert alert-danger">
                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@err.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="Login" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">Usuario / Correo</label>
                <input name="UserOrEmail" value="@(Model?.Login?.UserOrEmail ?? string.Empty)" class="form-control" placeholder="admin@escuela.com" />
            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input name="Password" value="" class="form-control" placeholder="●●●●●●" type="password" />
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>

            <div class="text-center mt-3">
                <a href="#" class="small text-decoration-none">¿Olvidaste tu contraseña?</a>
            </div>

            <div class="text-center mt-3">
                <span class="small">¿No tienes cuenta?</span>
                <button type="button" class="btn btn-outline-primary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#registerModal">Crear cuenta</button>
            </div>
        </form>
    </div>

    <!-- Register Modal -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Crear cuenta</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @if (!ViewData.ModelState.IsValid && ViewBag.ActiveForm == "register")
                        {
                            <div class="alert alert-danger">
                                @foreach (var kv in ViewData.ModelState)
                                {
                                    if (kv.Key.StartsWith("Register") || kv.Key.Contains("Username") || kv.Key.Contains("Email") || kv.Key.Contains("Password"))
                                    {
                                        foreach (var err in kv.Value.Errors)
                                        {
                                            <div>@err.ErrorMessage</div>
                                        }
                                    }
                                }
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input name="Username" value="@(Model?.Register?.Username ?? string.Empty)" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Correo</label>
                            <input name="Email" value="@(Model?.Register?.Email ?? string.Empty)" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input name="Password" class="form-control" type="password" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirmar contraseña</label>
                            <input name="ConfirmPassword" class="form-control" type="password" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Crear cuenta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function() {
            var openRegister = '@(ViewBag.ActiveForm ?? "")' === 'register';
            if (openRegister) {
                var regModal = new bootstrap.Modal(document.getElementById('registerModal'));
                regModal.show();
            }
        })();
    </script>
</body>
</html>