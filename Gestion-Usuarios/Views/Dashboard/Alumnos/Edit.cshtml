@model Gestion_Usuarios.Models.StudentViewModel
@{
    ViewData["Title"] = "Editar Alumno";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 font-weight-bold text-primary"><i class="fa-solid fa-pen-to-square me-2"></i>Editar Alumno</h5>
        <a class="btn btn-secondary btn-sm" href="/Alumnos"><i class="fa-solid fa-arrow-left me-1"></i> Volver</a>
    </div>
    <div class="card-body">
        <form method="post" action="/Alumnos/Edit">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label">Identificador</label>
                <input class="form-control" value="@Model.Identificador" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre Completo</label>
                <input class="form-control" value="@Model.NombreCompleto" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label">Carrera</label>
                <input class="form-control" name="Carrera" value="@Model.Carrera" />
            </div>

            <div class="mb-3">
                <label class="form-label">Semestre</label>
                <input class="form-control" name="Semestre" value="@Model.Semestre" />
            </div>

            <div class="d-flex justify-content-end">
                <button class="btn btn-primary me-2" type="submit">Guardar</button>
                <a class="btn btn-secondary" href="/Alumnos">Cancelar</a>
            </div>
        </form>
    </div>
</div>