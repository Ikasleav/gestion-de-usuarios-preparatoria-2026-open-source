@model IEnumerable<Gestion_Usuarios.Models.StudentViewModel>
@{
    ViewData["Title"] = "Gestión de Alumnos";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="m-0 font-weight-bold text-primary">
            <i class="fa-solid fa-user-graduate me-2"></i>Listado General de Alumnos
        </h5>
    </div>
    <div class="card-body">
        <table id="miTabla" class="table table-striped table-hover dt-responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Matrícula/Folio</th>
                    <th>Nombre Completo</th>
                    <th>CURP</th>
                    <th>Correo Electrónico</th>
                    <th>Carrera</th>
                    <th>Grupo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Identificador</strong></td>
                            <td>@item.NombreCompleto</td>
                            <td><small>@item.CURP</small></td>
                            <td>@item.Email</td>
                            <td>@item.Carrera</td>
                            <td>@item.Grupo</td>
                            <td>
                                <span class="badge @(item.EstadoCodigo == "INSCRITO" ? "bg-success" : "bg-warning")">
                                    @item.EstadoCodigo
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-primary btn-sm" onclick="verAlumno(@item.Id)" title="Editar">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatables_tools.js"></script>
    <script>
        $(document).ready(function () {
            // Inicialización avanzada de DataTable
            $('#miTabla').DataTable({
                responsive: true,
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/2.0.0/i18n/es-ES.json'
                },
                dom: 'Bfrtip', // Habilita botones de exportación si los tienes cargados
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
            });
        });

        function verAlumno(id) {
            if (id) window.location.href = `/Alumnos/Edit/${id}`;
        }
    </script>
}