@model IEnumerable<Gestion_Usuarios.Models.StudentViewModel>
@{
    ViewData["Title"] = "Gestión de Nuevo Ingreso";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 font-weight-bold text-primary"><i class="fa-solid fa-user-graduate me-2"></i>Listado de Alumnos - Nuevo Ingreso</h5>
        <button class="btn btn-success btn-sm"><i class="fa-solid fa-plus me-1"></i> Nuevo Alumno</button>
    </div>
    <div class="card-body">
        <table id="miTabla" class="table table-striped table-hover dt-responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>ID / Folio</th>
                    <th>Nombre Completo</th>
                    <th>CURP</th>
                    <th>Correo Electrónico</th>
                    <th>Carrera</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr data-id="@item.Id">
                            <td><small class="fw-bold">@item.Identificador</small></td>
                            <td>@item.NombreCompleto</td>
                            <td><code class="text-dark">@item.CURP</code></td>
                            <td>@item.Email</td>
                            <td>@item.Carrera</td>
                            <td>
                                <span class="badge @(item.EstadoCodigo == "BAJA" ? "bg-danger" : "bg-success")">
                                    @item.EstadoCodigo
                                </span>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-outline-primary btn-sm" onclick="editarAlumno(@item.Id)">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </button>
                                <button class="btn btn-outline-danger btn-sm" onclick="eliminarAlumno(@item.Id)" @(item.EstadoCodigo == "BAJA" ? "disabled" : "")>
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#miTabla').DataTable({
                responsive: true,
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/2.0.0/i18n/es-ES.json'
                },
                pageLength: 10,
                order: [[1, 'asc']] // Ordenar por nombre por defecto
            });
        });

