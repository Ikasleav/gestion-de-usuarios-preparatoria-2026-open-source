@{
    ViewData["Title"] = "Gestión de Docentes";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-primary"><i class="fa-solid fa-chalkboard-teacher me-2"></i>Listado de Docentes</h5>
        <button class="btn btn-success btn-sm"><i class="fa-solid fa-plus me-1"></i> Nuevo Docente</button>
    </div>
    <div class="card-body">
        <table id="tablaDocentes" class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Carrera</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>100</td>
                    <td>Profa. García</td>
                    <td>Arquitectura</td>
                    <td>garcia@ejemplo.com</td>
                    <td>
                        <button class="btn btn-primary btn-sm"><i class="fa-solid fa-pen-to-square"></i></button>
                        <button class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaDocentes').DataTable({
                language: { url: "https://cdn.datatables.net/plug-ins/2.0.0/i18n/es-ES.json" }
            });
        });
    </script>
}   