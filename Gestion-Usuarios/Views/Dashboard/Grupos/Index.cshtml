@{
    ViewData["Title"] = "Gestión de Grupos";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-primary"><i class="fa-solid fa-object-group me-2"></i>Listado de Grupos</h5>
        <button class="btn btn-success btn-sm"><i class="fa-solid fa-plus me-1"></i> Nuevo Grupo</button>
    </div>
    <div class="card-body">
        <table id="tablaGrupos" class="table table-striped table-bordered table-sm" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Clave</th>
                    <th>Nombre Grupo</th>
                    <th>Carrera</th>
                    <th>Turno</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @* Si pasas los datos por modelo, itera aquí. 
                   Si usas AJAX (recomendado), deja el tbody vacío *@
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaGrupos').DataTable({
                // Si decides usar carga por AJAX (más rápido):
                // ajax: '/Grupos/GetGrupos',
                // columns: [ { data: 'GroupID' }, { data: 'Code' }, ... ]

                language: {
                    url: "https://cdn.datatables.net/plug-ins/2.0.0/i18n/es-ES.json"
                },
                responsive: true,
                columnDefs: [
                    {
                        targets: -1, // Última columna (Acciones)
                        render: function(data, type, row) {
                            return `<button class="btn btn-info btn-sm"><i class="fa-solid fa-pen"></i></button>
                                    <button class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></button>`;
                        }
                    },
                    {
                        targets: 5, // Columna Estado
                        render: function(data) {
                            return data ? '<span class="badge bg-success">Activo</span>' : '<span class="badge bg-danger">Inactivo</span>';
                        }
                    }
                ]
            });
        });
    </script>
}