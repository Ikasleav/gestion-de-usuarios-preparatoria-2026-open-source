@{
    ViewData["Title"] = "Módulo — Gestión de Usuarios";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">Gestión de Usuarios</h2>
            <p class="text-muted">Accede a las vistas internas del módulo</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Usuarios -->
        <div class="col-12 col-sm-6 col-md-4">
            <a class="text-decoration-none" asp-controller="Usuarios" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3 display-6 text-primary"><i class="fa-solid fa-user"></i></div>
                            <div>
                                <h5 class="card-title mb-0">Usuarios</h5>
                                <small class="text-muted">Administrar cuentas</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Alumnos -->
        <div class="col-12 col-sm-6 col-md-4">
            <a class="text-decoration-none" asp-controller="Alumnos" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3 display-6 text-info"><i class="fa-solid fa-user-graduate"></i></div>
                            <div>
                                <h5 class="card-title mb-0">Alumnos</h5>
                                <small class="text-muted">Listado y acciones</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Docentes -->
        <div class="col-12 col-sm-6 col-md-4">
            <a class="text-decoration-none" asp-controller="Docentes" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3 display-6 text-warning"><i class="fa-solid fa-chalkboard-user"></i></div>
                            <div>
                                <h5 class="card-title mb-0">Docentes</h5>
                                <small class="text-muted">(Vacío por ahora)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Históricos -->
        <div class="col-12 col-sm-6 col-md-4">
            <a class="text-decoration-none" asp-controller="Historicos" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3 display-6 text-secondary"><i class="fa-solid fa-folder-closed"></i></div>
                            <div>
                                <h5 class="card-title mb-0">Históricos</h5>
                                <small class="text-muted">(Vacío por ahora)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Grupos -->
        <div class="col-12 col-sm-6 col-md-4">
            <a class="text-decoration-none" asp-controller="Grupos" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3 display-6 text-secondary"><i class="fa-solid fa-folder-closed"></i></div>
                            <div>
                                <h5 class="card-title mb-0">Grupos</h5>
                                <small class="text-muted">(Vacío por ahora)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Bajas -->
        <div class="col-12 col-sm-6 col-md-4">
           <a class="text-decoration-none" asp-controller="Bajas" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3 display-6 text-danger"><i class="fa-solid fa-user-slash"></i></div>
                            <div>
                                <h5 class="card-title mb-0">Bajas</h5>
                                <small class="text-muted">(Vacío por ahora)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Nuevo Ingreso -->
        <div class="col-12 col-sm-6 col-md-4">
            <a class="text-decoration-none" asp-controller="Nuevo_ingreso" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3 display-6 text-success"><i class="fa-solid fa-user-plus"></i></div>
                            <div>
                                <h5 class="card-title mb-0">Nuevo Ingreso</h5>
                                <small class="text-muted">(Vacío por ahora)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>