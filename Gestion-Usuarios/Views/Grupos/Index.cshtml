@{
    ViewData["Title"] = "Gestión de Grupos";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-primary"><i class="fa-solid fa-object-group me-2"></i>Listado de Grupos</h5>
        <button class="btn btn-success btn-sm"><i class="fa-solid fa-plus me-1"></i> Nuevo Grupo</button>
    </div>
    <div class="card-body">
        <table id="tablaGrupos" class="table table-bordered table-sm" style="width:100%">
            <thead class="table-light">
                <tr>
                    <th>Clave</th>
                    <th>Nombre</th>
                    <th>Carrera</th>
                    <th>Semestre</th>
                    <th>Miembros</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>G-01</td>
                    <td>Grupo A</td>
                    <td>Ing. Sistemas</td>
                    <td>4</td>
                    <td>25</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaGrupos').DataTable({
                language: { url: "https://cdn.datatables.net/plug-ins/2.0.0/i18n/es-ES.json" }
            });
        });
    </script>
}