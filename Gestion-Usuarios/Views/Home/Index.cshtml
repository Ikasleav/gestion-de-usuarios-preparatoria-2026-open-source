@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-6">Panel principal</h1>
            <p class="text-muted">Selecciona un módulo para comenzar</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-sm-6 col-md-4">
            <a class="text-decoration-none" asp-controller="Dashboard" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3 display-6 text-primary"><i class="fa-solid fa-users"></i></div>
                            <div>
                                <h5 class="card-title mb-0">Gestión de Usuarios</h5>
                                <small class="text-muted">Administrar cuentas y permisos</small>
                            </div>
                        </div>
                        <div class="mt-auto">
                            <span class="badge bg-primary">Abrir módulo</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 display-6 text-secondary"><i class="fa-solid fa-layer-group"></i></div>
                        <div>
                            <h5 class="card-title mb-0">Modulo 2</h5>
                            <small class="text-muted">(Vacío por ahora)</small>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <span class="badge bg-secondary">Próximamente</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alumnos -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 display-6 text-info"><i class="fa-solid fa-user-graduate"></i></div>
                        <div>
                            <h5 class="card-title mb-0">Modulo 3</h5>
                            <small class="text-muted">(Vacío por ahora)</small>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <span class="badge bg-info text-dark">Próximamente</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Docentes -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 display-6 text-success"><i class="fa-solid fa-chalkboard-user"></i></div>
                        <div>
                            <h5 class="card-title mb-0">Modulo 4</h5>
                            <small class="text-muted">(Vacío por ahora)</small>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <span class="badge bg-success">Próximamente</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Históricos -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 display-6 text-warning"><i class="fa-solid fa-folder-closed"></i></div>
                        <div>
                            <h5 class="card-title mb-0">Modulo 5</h5>
                            <small class="text-muted">(Vacío por ahora)</small>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <span class="badge bg-warning text-dark">Próximamente</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Otros módulos placeholder -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3 display-6 text-muted"><i class="fa-solid fa-ellipsis"></i></div>
                        <div>
                            <h5 class="card-title mb-0">Otros</h5>
                            <small class="text-muted">Reservado</small>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <span class="badge bg-secondary">—</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
