@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-primary"><i class="fa-solid fa-users me-2"></i>Listado de Usuarios</h5>
        <button class="btn btn-success btn-sm"><i class="fa-solid fa-plus me-1"></i> Nuevo Usuario</button>
    </div>
    <div class="card-body">
        <table id="tablaUsuarios" class="table table-striped table-hover dt-responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Admin Sistema</td>
                    <td>admin@ejemplo.com</td>
                    <td>Administrador</td>
                    <td><span class="badge bg-success">Activo</span></td>
                    <td>
                        <button class="btn btn-primary btn-sm"><i class="fa-solid fa-pen-to-square"></i></button>
                        <button class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaUsuarios').DataTable({
                responsive: true,
                language: { url: "https://cdn.datatables.net/plug-ins/2.0.0/i18n/es-ES.json" },
                layout: {
                    topStart: { buttons: ['excel', 'pdf', 'print'] }
                }
            });
        });
    </script>
}