@{
    ViewData["Title"] = "Usuarios por Carrera";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 text-primary"><i class="fa-solid fa-filter me-2"></i>Usuarios por Carrera</h5>
    </div>
    <div class="card-body">
        <table id="tablaUsuariosCarrera" class="table table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Carrera</th>
                    <th>Usuarios</th>
                    <th>Activos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Ing. Sistemas</td>
                    <td>120</td>
                    <td>110</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-controller="UsuariosPorCarrera" asp-action="Details">Ver</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaUsuariosCarrera').DataTable({
                language: { url: "https://cdn.datatables.net/plug-ins/2.0.0/i18n/es-ES.json" }
            });
        });
    </script>
}   